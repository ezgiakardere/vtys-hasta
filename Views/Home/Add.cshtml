
@using kıvıl.Entities
@model Hasta

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Forms /</span> Hasta Ekleme
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Hasta Bilgileri</h5>
                <form asp-controller="Home" asp-area="" asp-action="Add" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="All"></div>
                    @*     <div class="form-group">

                            <label asp-for="HastaId" class="form-label">HastaNumarası</label>
                            <input asp-for="HastaId" type="number" class="form-control mb-3" placeholder="Lütfen Hasta Numarası  Giriniz">
                            <span asp-validation-for="Isim" class="text-danger"></span>
                        </div> *@

                        <div class="form-group">
                            <label asp-for="Isim" class="form-label">İsim</label>
                            <input asp-for="Isim" type="text" class="form-control mb-3" placeholder="Lütfen isim giriniz">
                            <span asp-validation-for="Isim" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Soyisim" class="form-label">Soyisim</label>
                            <input asp-for="Soyisim" type="text" class="form-control mb-3" placeholder="Lütfen soyisim giriniz">
                            <span asp-validation-for="Soyisim" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Cinsiyet" class="form-label">Cinsiyet</label>
                            <input asp-for="Cinsiyet" type="text" class="form-control mb-3" placeholder="Lütfen cinsiyet giriniz">
                            <span asp-validation-for="Cinsiyet" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Yas" class="form-label">Yaş</label>
                            <input asp-for="Yas" type="number" class="form-control mb-3" placeholder="Lütfen yaş giriniz">
                            <span asp-validation-for="Yas" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EgzersizYapıyorMu" class="form-label">Egzersiz Yapıyor Mu?</label>
                            <select asp-for="EgzersizYapıyorMu" class="form-control mb-3">
                                <option value="true">Evet</option>
                                <option value="false">Hayır</option>
                            </select>
                            <span asp-validation-for="EgzersizYapıyorMu" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AileGecmisi" class="form-label">Aile Geçmişi</label>
                            <select asp-for="AileGecmisi" class="form-control mb-3">
                                <option value="true">Evet</option>
                                <option value="false">Hayır</option>
                            </select>
                            <span asp-validation-for="AileGecmisi" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SigaraKullanımı" class="form-label">Sigara Kullanımı</label>
                            <select asp-for="SigaraKullanımı" class="form-control mb-3">
                                <option value="true">Evet</option>
                                <option value="false">Hayır</option>
                            </select>
                            <span asp-validation-for="SigaraKullanımı" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AlkolKullanımı" class="form-label">Alkol Kullanımı</label>
                            <select asp-for="AlkolKullanımı" class="form-control mb-3">
                                <option value="true">Evet</option>
                                <option value="false">Hayır</option>
                            </select>
                            <span asp-validation-for="AlkolKullanımı" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="KalpKriziRiski" class="form-label">Kalp Krizi Riski</label>
                            <select asp-for="KalpKriziRiski" class="form-control mb-3">
                                <option value="true">Evet</option>
                                <option value="false">Hayır</option>
                            </select>
                            <span asp-validation-for="KalpKriziRiski" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
